#!/bin/bash

source ~/colors.sh

# Taken from: https://github.com/jimeh/git-aware-prompt
function find_git_branch() {
    # Based on: http://stackoverflow.com/a/13003854/170413
    local branch
    if branch=$(git rev-parse --abbrev-ref HEAD 2> /dev/null); then
        if [[ "$branch" == "HEAD" ]]; then
            branch='detached*'
        fi
        git_branch="($branch)"
    else
        git_branch=""
    fi

    export PS1="\[$txtwht[$txtred\t$txtwht][$bldylw\u$txtwht][$bldylw\w$txtwht]$bldgrn${git_branch}$txtwht\]\$$txtrst "
}
find_git_branch
PROMPT_COMMAND=find_git_branch

